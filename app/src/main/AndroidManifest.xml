<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.list.nasro.lionsbrowser">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/mainlion"
        android:label="Thirsty Lions Browser"
        android:roundIcon="@mipmap/mainlion_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.list.nasro.lionsbrowser.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.APP_BROWSER" />
            </intent-filter></activity>
        <activity
            android:name="com.list.nasro.lionsbrowser.ListWebsites"
            android:label="website List"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name="com.list.nasro.lionsbrowser.Options"
            android:label="UAS Options"></activity>
    </application>

</manifest>

